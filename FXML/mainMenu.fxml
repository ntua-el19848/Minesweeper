<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers">
<children>
      <MenuBar layoutX="1.0" layoutY="1.0" prefHeight="27.0" prefWidth="400.0">
        <menus>
          <Menu mnemonicParsing="false" text="Application">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#ApplicationAction" text="Application Menu" />
              <MenuItem mnemonicParsing="false" onAction="#CreateAction" text="Create Game" />
                  <MenuItem mnemonicParsing="false" onAction="#LoadAction" text="Load Game" />
                  <MenuItem mnemonicParsing="false" onAction="#StartAction" text="Start Game" />
                  <MenuItem mnemonicParsing="false" onAction="#MainExitAction" text="Exit" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Details">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#DetailAction" text="Details Menu" />
              <MenuItem mnemonicParsing="false" onAction="#RoundsAction" text="Rounds" />
                  <MenuItem mnemonicParsing="false" onAction="#SolutionAction" text="Solution" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   <Button fx:id="applicationButton" layoutX="144.0" layoutY="300.0" mnemonicParsing="false" onAction="#ApplicationAction" prefHeight="26.0" prefWidth="112.0" text="Application">
         <font>
            <Font name="MesloLGS NF Regular" size="13.0" />
         </font></Button>
   <Button fx:id="detailsButton" layoutX="144.0" layoutY="350.0" mnemonicParsing="false" onAction="#DetailAction" prefHeight="26.0" prefWidth="112.0" text="Details">
         <font>
            <Font name="MesloLGS NF Regular" size="13.0" />
         </font></Button>
   <Button fx:id="exitButton" layoutX="144.0" layoutY="400.0" mnemonicParsing="false" onAction="#MainExitAction" prefHeight="26.0" prefWidth="112.0" text="Exit">
         <font>
            <Font name="MesloLGS NF Regular" size="13.0" />
         </font></Button>
   <Label layoutX="22.0" layoutY="73.0" prefHeight="27.0" prefWidth="358.0" text="Welcome to the Minesweeper Game">
      <font>
         <Font name="MesloLGS NF Bold" size="19.0" />
      </font>
   </Label>
   <Label layoutX="29.0" layoutY="517.0" prefHeight="47.0" prefWidth="343.0" text="NTUA - Medialab Project by George Sotiropoulos (el19848)" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="MesloLGS NF Regular" size="12.0" />
         </font></Label>
   <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="125.0" layoutY="125.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@mine.png" />
      </image>
   </ImageView>
</children></AnchorPane>
