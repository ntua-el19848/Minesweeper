   <Button fx:id="startButton" layoutX="147.0" layoutY="400.0" mnemonicParsing="false" onAction="#StartAction" prefHeight="26.0" prefWidth="107.0" text="Start Game">
         <font>
            <Font name="MesloLGS NF Regular" size="13.0" />
         </font></Button>
