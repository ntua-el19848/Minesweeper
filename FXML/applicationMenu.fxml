         </font></Button>
   <Button fx:id="loadButton" layoutX="147.0" layoutY="350.0" mnemonicParsing="false" onAction="#LoadAction" prefHeight="26.0" prefWidth="107.0" text="Load Game">
         <font>
            <Font name="MesloLGS NF Regular" size="13.0" />
         </font></Button>
   <Button fx:id="exitButton" layoutX="147.0" layoutY="450.0" mnemonicParsing="false" onAction="#ExitAction" prefHeight="26.0" prefWidth="107.0" text="Exit">
